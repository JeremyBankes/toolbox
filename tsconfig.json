{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "source",
        "outDir": "build",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "include": [
        "source/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeAcquisition": {
        "enable": false
    }
}